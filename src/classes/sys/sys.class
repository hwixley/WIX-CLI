#!/bin/bash

# COLORS
GREEN=$(tput setaf 2)
ORANGE=$(tput setaf 3)
RED=$(tput setaf 1)
BLUE=$(tput setaf 4)
CYAN=$(tput setaf 6)
BLACK=$(tput setaf 0)
RESET=$(tput setaf 7)

# CONST STRING PROMPTS
export notsupported="${RED}This path is not supported${RESET}"

# PROMPTS
sys.hr() {
	echo "------------------------------------------------------------"
}

sys.hR() {
	echo "============================================================"
}

sys.info() {
	echo "${GREEN}$1${RESET}"
}

sys.h1() {
	echo "${BLUE}$1${RESET}"
}

sys.h2() {
	echo "${CYAN}$1${RESET}"
}

sys.h1r() {
	echo "${BLUE}$1${RESET}"
	sys.hr
}

sys.h2r() {
	echo "${CYAN}$1${RESET}"
	sys.hr
}

sys.hr1r() {
	sys.hr
	echo "${BLUE}$1${RESET}"
	sys.hr
}

sys.hr2r() {
	sys.hr
	echo "${CYAN}$1${RESET}"
	sys.hr
}

sys.warn() {
	echo "${ORANGE}$1${RESET}"
}

sys.error() {
	if [ "$1" = "" ]; then
		echo "$notsupported"
	else
		echo "${RED}$1${RESET}"
	fi
}

# Shell utilities

# sys.shell.* - Shell specifications

sys.shell.zsh() {
	if [[ "$(ps -o args= -p $$)" = *"zsh"* ]]; then
		return 0
	else
		return 1
	fi
}

sys.shell.envfile() {
	if sys.shell.zsh; then
		echo "$HOME/.zshrc"
	else
		echo "$HOME/.bashrc"
	fi
	return 0
}

sys.shell.completionfile() {
	if sys.shell.zsh; then
		echo "$HOME/.zshrc"
	else
		echo "$HOME/.bash_completion"
	fi
	return 0
}

sys.shell.tostring() {
	sys.h1r "Shell:"
	if sys.shell.zsh; then
		echo "zsh (0_0)"
	else
		echo "bash (-_-)"
	fi
}

# System specifications

# sys.cpu.* - CPU specifications

sys.cpu.architecture() {
	uname -m
}

sys.cpu.model() {
	sys.util.trim "$(lscpu | grep "Model name" | cut -d ":" -f2 | cut -d " " -f2-)"
}

sys.cpu.cores() {
	sys.util.trim "$(lscpu | grep "Core(s) per socket" | cut -d ":" -f2 | cut -d " " -f2-)"
}

sys.cpu.threads() {
	sys.util.trim "$(lscpu | grep "Thread(s) per core" | cut -d ":" -f2 | cut -d " " -f2-)"
}

sys.cpu.total() {
	sys.util.trim "$(lscpu | grep "CPU(s)" | cut -d ":" -f2 | cut -d " " -f2-)"
}

sys.cpu.tostring() {
	sys.h1r "CPU:"
	sys.h2 "Architecture: ${RESET}$(sys.cpu.architecture)"
	sys.h2 "Model: ${RESET}$(sys.cpu.model)"
	sys.h2 "Cores: ${RESET}$(sys.cpu.cores)"
	sys.h2 "Threads: ${RESET}$(sys.cpu.threads)"
	sys.h2 "Total: ${RESET}$(sys.cpu.total)"
}


# sys.gpu.* - GPU specifications

sys.gpu.vendor() {
	lspci | grep VGA | cut -d ":" -f3 | cut -d " " -f2
}

sys.gpu.model() {
	lspci | grep VGA | cut -d ":" -f3 | cut -d " " -f3-
}

sys.gpu.driver() {
	lspci -k | grep -A 2 -i "VGA" | grep "Kernel driver in use"
}

sys.gpu.tostring() {
	sys.h1r "GPU:"
	sys.h2 "Vendor: ${RESET}$(sys.gpu.vendor)"
	sys.h2 "Model: ${RESET}$(sys.gpu.model)"
	sys.h2 "Driver: ${RESET}$(sys.gpu.driver)"
}

# sys.ram.* - RAM specifications

sys.ram.total() {
	free -h | grep Mem | awk '{print $2}'
}

sys.ram.used() {
	free -h | grep Mem | awk '{print $3}'
}

sys.ram.free() {
	free -h | grep Mem | awk '{print $4}'
}

sys.ram.shared() {
	free -h | grep Mem | awk '{print $5}'
}

sys.ram.buffcache() {
	free -h | grep Mem | awk '{print $6}'
}

sys.ram.available() {
	free -h | grep Mem | awk '{print $7}'
}

sys.ram.tostring() {
	sys.h1r "RAM:"
	sys.h2r "Total: ${RESET}$(sys.ram.total)"
	sys.h2 "Used: ${RESET}$(sys.ram.used)"
	sys.h2 "Free: ${RESET}$(sys.ram.free)"
	sys.h2 "Shared: ${RESET}$(sys.ram.shared)"
	sys.h2 "Buffer/Cache: ${RESET}$(sys.ram.buffcache)"
	sys.h2 "Available: ${RESET}$(sys.ram.available)"
}

# sys.disk.* - Disk specifications

sys.disk.total() {
	df -h | grep "/dev/sda1" | awk '{print $2}'
}

sys.disk.used() {
	df -h | grep "/dev/sda1" | awk '{print $3}'
}

sys.disk.avail() {
	df -h | grep "/dev/sda1" | awk '{print $4}'
}

sys.disk.use() {
	if sys.os.mac; then
		df -h | grep "/dev/disk1s1" | awk '{print $5}'
	else
		df -h | grep "/dev/sda1" | awk '{print $5}'
	fi
}

sys.disk.mounted() {
	sys.util.trim "$(df -h | grep "/dev/sda1" | awk '{print $6}')"
}

sys.disk.tostring() {
	sys.h1r "Disk:"
	sys.h2r "Total: ${RESET}$(sys.disk.total)"
	sys.h2 "Used: ${RESET}$(sys.disk.used)"
	sys.h2 "Available: ${RESET}$(sys.disk.avail)"
	sys.h2 "Use: ${RESET}$(sys.disk.use)"
	sys.h2 "Mounted: ${RESET}$(sys.disk.mounted)"
}

# sys.os.* - OS specifications

sys.os.name() {
	uname -s
}

sys.os.mac() {
	if [[ "$OSTYPE" == "darwin"* ]]; then
		return 0
	else
		return 1
	fi
}

sys.os.linux() {
	if [[ "$OSTYPE" == "linux-gnu"* ]]; then
		return 0
	else
		return 1
	fi
}

sys.os.windows() {
	if [[ "$OSTYPE" == "msys" ]]; then
		return 0
	else
		return 1
	fi
}

sys.os.wsl() {
	if [[ "$(uname -r)" == *"Microsoft"* ]]; then
		return 0
	else
		return 1
	fi
}

sys.os.tostring() {
	sys.h1r "OS:"
	sys.h2 "Name: ${RESET}$(sys.os.name)"
	if sys.os.mac; then
		sys.h2 "Type: ${RESET}macOS"
	elif sys.os.linux; then
		sys.h2 "Type: ${RESET}Linux"
	elif sys.os.windows; then
		sys.h2 "Type: ${RESET}Windows"
	elif sys.os.wsl; then
		sys.h2 "Type: ${RESET}WSL"
	else
		sys.h2 "Type: ${RESET}Unknown"
	fi
}

# sys.host.* - Host specifications

sys.host.name() {
	hostname
}

sys.host.tostring() {
	hostnamectl
}

# sys.util.* - System utilities

sys.util.webtext() {
	lynx -dump -cookies "$1"
}

sys.util.clipboard() {
	if command -v pbcopy >/dev/null 2>&1; then
		sys.info "This has been saved to your clipboard!"
		echo "$1" | pbcopy
	elif command -v xclip >/dev/null 2>&1; then
		sys.info "This has been saved to your clipboard!"
		echo "$1" | xclip -selection c
	else
		sys.warn "Clipboard not supported on this system, please install xclip or pbcopy."
	fi
}

sys.util.editfile() {
    if sys.shell.zsh; then
        vi "$1"
    else
        gedit "$1"
    fi
}

sys.util.openfile() {
	xdg-open "file:///$1"
}

sys.util.openurl() {
	if sys.shell.zsh; then
		open "$1"
	else
		{
			xdg-open "$1"
		} &> /dev/null
	fi
}

sys.util.empty() {
	if [ "$1" = "" ]; then
		return 0
	else
		return 1
	fi
}

sys.util.inlineread() {
	if sys.shell.zsh; then
		read "input?$1"
	else
		read -rp "$1 " input
	fi
	echo "$input"
}

sys.util.inlinesed() {
	if sys.shell.zsh; then
		sed -i '' "$1" "$2"
	else
		sed -i "$1" "$2"
	fi
}

sys.util.trim() {
	echo "$1" | xargs
}

sys.dependencies.install() {
	if sys.os.mac; then
		sys.info "Installing dependencies for macOS..."
		brew update
		brew install xclip jq csvkit
		brew tap teamookla/speedtest
		brew install speedtest --force
		pip3 install -r $WYX_DIR/requirements.txt
	elif sys.os.linux; then
		sys.info "Installing dependencies for Linux..."
		sudo apt-get update
		sudo apt-get -y install xclip jq csvkit
		curl -s https://packagecloud.io/install/repositories/ookla/speedtest-cli/script.deb.sh | sudo bash
		sudo apt-get -y install speedtest
		pip3 install -r $WYX_DIR/requirements.txt
	else
		sys.error "This OS is not supported"
	fi
}