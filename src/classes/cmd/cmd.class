# cmd class - used to parse input into command objects

# load dependencies
. "${WIX_DIR}/src/classes/lib/lib.h"
lib lib
. "${WIX_DIR}/src/classes/sys/sys.h"
sys sys

# class properties
WIX_cmd="id:"
export WIX_cmd

# class methods
cmd.property(){
    if [ "$2" = "=" ]
    then
        WIX_cmd=$(echo "$WIX_cmd" | sed -E -e "s/$1:[^,]*/$1:$3/g")
    else
        if [[ $WIX_cmd =~ $1:([^,]*) ]]; then
            if sys.shell.zsh; then
                echo "${match[1]}"
            else
                echo "${BASH_REMATCH[1]}"
            fi
        fi
    fi
}

cmd.id(){
    if [ "$1" = "=" ]
    then
	    cmd.property id = "$2"
    else
	    cmd.property id
    fi
}

cmd.name(){
    lib.csv.name "$(cmd.id '')"
}

cmd.path(){
    lib.csv.path "$(cmd.id '')"
}

cmd.public(){
    lib.csv.public "$(cmd.id '')"
}

cmd.args(){
    lib.csv.args "$(cmd.id '')"
}